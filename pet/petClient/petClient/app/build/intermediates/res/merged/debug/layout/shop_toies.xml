<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="玩具用品"
                android:textSize="16sp"
                android:textColor="#555"
                />
            <ImageButton
                android:id="@+id/ib_toies"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#FDf"
                android:src="@drawable/shop_toies"
                android:scaleType="fitXY"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:weightSum="3"
                >
                <ImageButton
                    android:id="@+id/ib_toies_left1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/shop_toies_left1"
                    android:scaleType="fitXY"
                    android:clickable="true"
                    android:background="@drawable/shop_textview_style"
                    android:layout_weight="1"
                    />
                <ImageButton
                    android:id="@+id/ib_toies_middle1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/shop_toies_middle1"
                    android:scaleType="fitXY"
                    android:background="@drawable/shop_textview_style"
                    android:layout_weight="1"
                    />
                <ImageButton
                    android:id="@+id/ib_toies_right1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/shop_toies_right1"
                    android:scaleType="fitXY"
                    android:background="@drawable/shop_textview_style"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:weightSum="3"
                >
                <ImageButton
                    android:id="@+id/ib_toies_left2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/shop_toies_left2"
                    android:scaleType="fitXY"
                    android:background="@drawable/shop_textview_style"
                    android:layout_weight="1"
                    />

                <ImageButton
                    android:id="@+id/ib_toies_middle2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/shop_toies_middle2"
                    android:scaleType="fitXY"
                    android:background="@drawable/shop_textview_style"
                    android:layout_weight="1"
                    />

                <ImageButton
                    android:id="@+id/ib_toies_right2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/shop_toies_right2"
                    android:scaleType="fitXY"
                    android:background="@drawable/shop_textview_style"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:weightSum="3"
                >
                <ImageButton
                    android:id="@+id/ib_toies_left3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/shop_toies_left3"
                    android:scaleType="fitXY"
                    android:background="@drawable/shop_textview_style"
                    android:layout_weight="1"
                    />
                <ImageButton
                    android:id="@+id/ib_toies_middle3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/shop_toies_middle3"
                    android:scaleType="fitXY"
                    android:background="@drawable/shop_textview_style"
                    android:layout_weight="1"
                    />
                <ImageButton
                    android:id="@+id/ib_toies_right3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/shop_toies_right3"
                    android:scaleType="fitXY"
                    android:background="@drawable/shop_textview_style"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>