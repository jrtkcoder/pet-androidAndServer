<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="医疗保健"
            android:textSize="16sp"
            android:textColor="#555"
            />
        <ImageButton
            android:id="@+id/ib_health_care"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#Fd8"
            android:src="@drawable/shop_health_care"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <ImageButton
                android:id="@+id/ib_health_left1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/shop_health_left1"
                android:scaleType="fitXY"
                android:background="@drawable/shop_textview_style"
                android:layout_weight="1"
                />

            <ImageButton
                android:id="@+id/ib_health_right1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/shop_health_right1"
                android:scaleType="fitXY"
                android:background="@drawable/shop_textview_style"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <ImageButton
                android:id="@+id/ib_health_left2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/shop_health_left2"
                android:scaleType="fitXY"
                android:background="@drawable/shop_textview_style"
                android:layout_weight="1"
                />

            <ImageButton
                android:id="@+id/ib_health_right2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/shop_health_right2"
                android:scaleType="fitXY"
                android:background="@drawable/shop_textview_style"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <ImageButton
                android:id="@+id/ib_health_left3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/shop_health_left3"
                android:scaleType="fitXY"
                android:background="@drawable/shop_textview_style"
                android:layout_weight="1"
                />

            <ImageButton
                android:id="@+id/ib_health_right3"
                android:layout_width="wrap_content"
                android:layout_height="151dp"
                android:src="@drawable/shop_health_right3"
                android:scaleType="fitXY"
                android:background="@drawable/shop_textview_style"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>