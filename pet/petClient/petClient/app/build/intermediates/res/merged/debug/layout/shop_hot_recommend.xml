<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="热门推荐"
            android:textSize="16sp"
            android:textColor="#555"
            />
        <ImageButton
            android:id="@+id/ib_hot_recommend"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/shop_hot_recommned"
            android:scaleType="fitXY"
            android:background="#ff1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:background="@drawable/linearlayout_margin"
                android:layout_weight="2"
                >

                <ImageButton
                    android:id="@+id/ib_hot_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shop_hot_left"
                    android:background="@drawable/shop_imagebutton_style"
                    android:scaleType="fitXY"
                    android:clickable="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:background="@drawable/linearlayout_margin"
                android:layout_weight="2"
                android:orientation="vertical"
                >
                <ImageButton
                    android:id="@+id/ib_hot_right1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shop_discount_in_limited_time"
                    android:background="@drawable/shop_imagebutton_style"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    >
                </ImageButton>
                <ImageButton
                    android:id="@+id/ib_hot_right2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shop_expelling_parasite"
                    android:background="@drawable/shop_imagebutton_style"                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    >
                </ImageButton>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>