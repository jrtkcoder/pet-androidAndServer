<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:background="@drawable/attention_item_selector_type"
    >

    <ImageView
        android:id="@+id/iv_head_item"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/im_pub_no_image" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="德玛西亚"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/im_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/nan"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_attribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="数学与计算机学院"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/im_attention_together"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="130dp"
        android:layout_gravity="center"
        android:src="@drawable/together_attention"
        android:visibility="gone"
        />

</LinearLayout>