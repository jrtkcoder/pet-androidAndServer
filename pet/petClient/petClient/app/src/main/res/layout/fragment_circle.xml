<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <!-- 标题 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/title_bar_red"
        >
    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/mtablayout"
        android:layout_width="280dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="6dp"
        tl:tl_bar_color="@color/title_bar_red"
        tl:tl_indicator_color="#fff"
        tl:tl_textSelectColor="@color/title_bar_red"
        tl:tl_indicator_corner_radius="20dp"
        tl:tl_tab_padding="20dp"
        tl:tl_textsize="16dp"
        tl:tl_textBold="true"
        tl:tl_divider_padding="3dp"
        android:outlineProvider="background"
        />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/circle_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
