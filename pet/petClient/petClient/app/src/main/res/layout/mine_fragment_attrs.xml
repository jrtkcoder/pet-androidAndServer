<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_mine_circle_message"
        style="@style/docment_item_root"
        android:layout_height="50dp"
        android:background="@drawable/press_iv_title_bar"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/mine_circle_message"
            />
        <TextView
            android:text="圈子信息"
            style="@style/docment_item_attr"
            android:layout_marginLeft="45dp"
            />
        <View
            style="@style/document_item_divider"
            android:layout_marginLeft="40dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_mine_board_message"
        style="@style/docment_item_root"
        android:layout_height="50dp"
        android:background="@drawable/press_iv_title_bar"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/mine_board_message"
            />
        <TextView
            android:text="留言信息"
            style="@style/docment_item_attr"
            android:layout_marginLeft="45dp"
            />
        <View
            style="@style/document_item_divider"
            android:layout_marginLeft="40dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_mine_collect"
        style="@style/docment_item_root"
        android:layout_height="50dp"
        android:background="@drawable/press_iv_title_bar"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/mine_collect"
            />
        <TextView
            android:text="我的收藏"
            style="@style/docment_item_attr"
            android:layout_marginLeft="45dp"
            />
        <View
            style="@style/document_item_divider"
            android:layout_marginLeft="40dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="@color/divide_content"/>
    <RelativeLayout
        android:id="@+id/rl_mine_recommed"
        style="@style/docment_item_root"
        android:layout_height="50dp"
        android:background="@drawable/press_iv_title_bar"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/mine_recommend"
            />
        <TextView
            android:text="推荐给好友"
            style="@style/docment_item_attr"
            android:layout_marginLeft="45dp"
            />
        <View
            style="@style/document_item_divider"
            android:layout_marginLeft="40dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_mine_feedback"
        style="@style/docment_item_root"
        android:layout_height="50dp"
        android:background="@drawable/press_iv_title_bar"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/mine_feedback"
            />
        <TextView
            android:text="意见反馈"
            style="@style/docment_item_attr"
            android:layout_marginLeft="45dp"
            />
        <View
            style="@style/document_item_divider"
            android:layout_marginLeft="40dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_mine_setting"
        style="@style/docment_item_root"
        android:layout_height="50dp"
        android:background="@drawable/press_iv_title_bar"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/mine_setting"
            />
        <TextView
            android:text="设置"
            style="@style/docment_item_attr"
            android:layout_marginLeft="45dp"
            />
        <View
            style="@style/document_item_divider"
            android:layout_marginLeft="40dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</LinearLayout>